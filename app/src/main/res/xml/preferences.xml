    <EditTextPreference
        android:key="api_endpoint"
        android:title="@string/prefs_api_title"
        android:summary="@string/prefs_api_summary"
        android:defaultValue="https://spaceapi.fixme.ch/directory.json"
        android:inputType="textUri" />

    <EditTextPreference
        android:key="apiurl"
        android:title="@string/prefs_api_url_title"
        android:summary="@string/prefs_api_url_summary"
        android:defaultValue="https://fixme.ch/status.json"
        android:inputType="textUri" />

    <EditTextPreference
        android:key="check_interval"
        android:title="@string/prefs_interval_title"
        android:summary="@string/prefs_interval_summary"
        android:defaultValue="30"
        android:inputType="number" />

    <CheckBoxPreference
        android:key="widget_transparency"
        android:title="@string/prefs_transparent_title"
        android:summary="@string/prefs_transparent_summary"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="widget_text"
        android:title="@string/prefs_text_title"
        android:summary="@string/prefs_text_summary"
        android:defaultValue="false" />

</PreferenceScreen>
